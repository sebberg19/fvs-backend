{
	"name": "fvs-backend",
	"version": "1.0.0",
	"description": "Futbolero Vintage Shop backend (Express + Stripe)",
	"main": "dist/app.js",
	"scripts": {
		"dev": "ts-node src/app.ts",
		"build": "tsc -p .",
		"start": "node dist/app.js",
		"stripe:listen": "stripe listen --forward-to localhost:$PORT/api/payments/webhook",
		"stripe:trigger:paid": "stripe trigger checkout.session.completed"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"nodemailer": "^6.10.1",
		"stripe": "^16.6.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/node": "^20.14.9",
		"@types/nodemailer": "^6.4.7",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5"
	},
	"engines": {
		"node": ">=18"
	}
}
